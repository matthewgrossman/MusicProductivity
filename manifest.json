{
  "manifest_version": 2,

  "name": "Productivity",
  "description": "This extension will make you more productive",
  "version": "1.0",

  "permissions": [
    "tabs",
    "storage",
    "https://play.spotify.com/*"
  ],

  "options_page": "options.html",

  "browser_action": {
    "default_icon":     "icon.png",
    "default_popup":    "popup.html"
  },

  "background": {
    "scripts": ["eventpage.js"],
    "persistent": false
  }
}
